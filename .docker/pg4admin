# Use the official pgAdmin4 image as the base
FROM dpage/pgadmin4

# Set the working directory
WORKDIR /pgadmin4

# Copy the static files into the image
COPY ../pgadmin4/servers.json /pgadmin4/servers.json
COPY ../pgadmin4/pgpass /pgadmin4/pgpass

# Set the necessary environment variables
ENV PGADMIN_DEFAULT_EMAIL=${PGADMIN_DEFAULT_EMAIL}
ENV PGADMIN_DEFAULT_PASSWORD=${PGADMIN_DEFAULT_PASSWORD}