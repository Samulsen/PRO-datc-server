{
  "compilerOptions": {
    // Further linting
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    // Aliases
    "baseUrl": ".",
    "paths": {
      // apps
      "@app-admin/*": ["apps/frontend/admin/src/*"],
      "@app-ui/*": ["apps/frontend/ui/src/*"],
      "@app-server/*": ["apps/backend/server/src/*"],
      // libs
      "@lib-components": ["libs/components"],
      "@lib-components/*": ["libs/components/*"],
      "@lib-theme": ["libs/theme"],
      "@lib-theme/*": ["libs/theme/*"]
    }
  },

  "include": ["apps", "libs", "config"]
}
