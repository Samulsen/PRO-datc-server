{
  "compilerOptions": {
    // needed for ts-node / jest
    // "resolveJsonModule": true,
    // "esModuleInterop": true,
    // Further linting
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    // Aliases
    "baseUrl": ".",
    "paths": {
      //config
      "@tests-unit-browser/*": ["config/tests/unit/browser/*"],
      // apps
      "@app-admin/*": ["apps/frontend/admin/src/*"],
      "@app-ui/*": ["apps/frontend/ui/src/*"],
      "@app-server/*": ["apps/backend/server/src/*"],
      // libs
      "@lib-components": ["libs/components/src"],
      "@lib-components/*": ["libs/components/src/*"],
      "@lib-theme": ["libs/theme/src"],
      "@lib-theme/*": ["libs/theme/src/*"]
    }
  }
}
